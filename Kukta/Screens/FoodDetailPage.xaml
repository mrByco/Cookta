<Page
    x:Class="Kukta.Screens.FoodDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kukta.Screens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer
            Name="Content"
            Visibility="Collapsed"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Vertical">
                <TextBlock Name="TitleTextBlock" FontSize="24" HorizontalAlignment="Center" Margin="24"/>
                <TextBox Name="TitleTextBox" FontSize="24" HorizontalAlignment="Center" Margin="24"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Name="DescTextBlock" FontSize="18" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20"/>
                    <TextBox Name="DescTextBox" FontSize="18" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20" AcceptsReturn="True" TextWrapping="Wrap"/>

                    <StackPanel Grid.Column="1" Name="IngredientsList" />
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal"
                    Name="ButtonBar"
                    HorizontalAlignment="Right"
                    Grid.Row="1"
                    Spacing="10">
            <Button Name="SaveBTN" Content="Mentés" Click="SaveBTN_Click" Margin="10"/>
            <Button Name="EditBTN" Content="Szerkesztés" Click="EditBTN_Click" Margin="10"/>
            <Button Name="DeleteBTN" Content="Törlés" Click="DeleteBTN_Click" Margin="10"/>
            <Button Name="Subscribe" Content="Feliratkozás" Margin="10"/>
            <Button Name="Unsubscribe" Content="Leiratkozás" Margin="10"/>
        </StackPanel>
        <ProgressRing 
            Visibility="Visible"
            Name="ProgressRing">
        </ProgressRing>
    </Grid>
</Page>
